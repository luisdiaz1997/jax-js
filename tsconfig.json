{
  "compilerOptions": {
    "strict": true,
    "target": "ES2023",
    "lib": ["ES2023", "DOM", "ESNext.Disposable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowJs": true,
    "paths": {
      "@jax-js/jax": ["."]
    },
    "types": ["@webgpu/types"],
    "noEmit": true,
    "skipLibCheck": true
  },
  "exclude": ["**/node_modules", "**/*.config.js", "**/dist", "website"]
}
